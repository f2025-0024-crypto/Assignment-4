#include <iostream>
using namespace std;

const int ROWS = 10;
const int COLS = 10;

// Function to display seat layout
void displaySeats(int seats[ROWS][COLS]) {
    cout << "\nSeat Layout (0 = Empty, 1 = Reserved)\n";
    for (int i = 0; i < ROWS; i++) {
        for (int j = 0; j < COLS; j++) {
            cout << seats[i][j] << " ";
        }
        cout << endl;
    }
}

// Function to reserve a seat
void reserveSeat(int seats[ROWS][COLS]) {
    int r, c;
    cout << "Enter row (1-10): ";
    cin >> r;
    cout << "Enter seat (1-10): ";
    cin >> c;

    if (r < 1 || r > 10 || c < 1 || c > 10) {
        cout << "Invalid seat number!\n";
        return;
    }

    if (seats[r-1][c-1] == 0) {
        seats[r-1][c-1] = 1;
        cout << "Seat reserved successfully.\n";
    } else {
        cout << "Seat already reserved.\n";
    }
}

// Function to cancel a seat
void cancelSeat(int seats[ROWS][COLS]) {
    int r, c;
    cout << "Enter row (1-10): ";
    cin >> r;
    cout << "Enter seat (1-10): ";
    cin >> c;

    if (r < 1 || r > 10 || c < 1 || c > 10) {
        cout << "Invalid seat number!\n";
        return;
    }

    if (seats[r-1][c-1] == 1) {
        seats[r-1][c-1] = 0;
        cout << "Seat reservation cancelled.\n";
    } else {
        cout << "Seat is already empty.\n";
    }
}

// Function to count row status
void countRows(int seats[ROWS][COLS]) {
    int full = 0, partial = 0, empty = 0;

    for (int i = 0; i < ROWS; i++) {
        int count = 0;
        for (int j = 0; j < COLS; j++) {
            if (seats[i][j] == 1)
                count++;
        }

        if (count == COLS)
            full++;
        else if (count == 0)
            empty++;
        else
            partial++;
    }

    cout << "\nRow Status:\n";
    cout << "Fully occupied rows: " << full << endl;
    cout << "Partially occupied rows: " << partial << endl;
    cout << "Empty rows: " << empty << endl;
}

// Menu function
void menu() {
    cout << "\n=== Bus Seat Reservation Menu ===\n";
    cout << "1. Display Seats\n";
    cout << "2. Reserve Seat\n";
    cout << "3. Cancel Seat\n";
    cout << "4. Row Occupancy Status\n";
    cout << "5. Exit\n";
}

int main() {
    int seats[ROWS][COLS] = {0}; // initialize all seats as empty
    int choice;

    do {
        menu();
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                displaySeats(seats);
                break;
            case 2:
                reserveSeat(seats);
                break;
            case 3:
                cancelSeat(seats);
                break;
            case 4:
                countRows(seats);
                break;
            case 5:
                cout << "Exiting system...\n";
                break;
            default:
                cout << "Invalid option!\n";
        }

    } while (choice != 5);

    return 0;
}
