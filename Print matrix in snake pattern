#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter order of matrix (n): ";
    cin >> n;

    int mat[n][n];
    cout << "Enter matrix elements:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> mat[i][j];
        }
    }

    // Print snake pattern
    cout << "\nSnake Pattern Output:\n";
    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) {
            // Left to Right
            for (int j = 0; j < n; j++) {
                cout << mat[i][j] << " ";
            }
        } else {
            // Right to Left
            for (int j = n - 1; j >= 0; j--) {
                cout << mat[i][j] << " ";
            }
        }
    }

    return 0;
}
